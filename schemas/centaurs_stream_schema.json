{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "member": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "ownership": {
                    "type": "integer"
                }
            },
            "required": ["address", "ownership"],
            "additionalProperties": false
        },
        "action": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": ["integer", "number"]
                },
                "description": {
                    "type": "string"
                },
                "actorAddress": {
                    "type": "string"
                },
                "commitId": {
                    "type": "string"
                },
                "outputUrl": {
                    "type": "string"
                }
            },
            "required": ["timestamp", "description", "actorAddress"],
            "additionalProperties": false
        },
        "message": {
            "type": "object",
            "properties": {
                "member": {
                    "type": "string"
                },
                "content": {
                    "type": "string"
                },
                "timestamp": {
                    "type": ["integer", "number"]
                }
            },
            "required": ["member", "content", "timestamp"],
            "additionalProperties": false
        },
        "daily_tweet_config": {
            "type": "object",
            "properties": {
                "daily": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                },
                "last_run": {
                    "type": ["integer", "null", "string"]
                },
                "run_hour_utc": {
                    "type": "integer"
                }
            },
            "required": ["daily", "enabled", "last_run", "run_hour_utc"],
            "additionalProperties": false
        },
        "scheduled_tweet_config": {
            "type": "object",
            "properties": {
                "daily": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                }
            },
            "required": ["daily", "enabled"],
            "additionalProperties": false
        },
        "daily_orbis_config": {
            "type": "object",
            "properties": {
                "daily": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                },
                "last_run": {
                    "type": ["integer", "null", "string"]
                },
                "run_hour_utc": {
                    "type": "integer"
                }
            },
            "required": ["daily", "enabled", "last_run", "run_hour_utc"],
            "additionalProperties": false
        },
        "week_in_olas_config": {
            "type": "object",
            "properties": {
                "weekly": {
                    "type": "integer"
                },
                "enabled": {
                    "type": "boolean"
                },
                "last_run": {
                    "type": ["integer", "null", "string"]
                },
                "run_hour_utc": {
                    "type": "integer"
                }
            },
            "required": ["weekly", "enabled", "last_run", "run_hour_utc"],
            "additionalProperties": false
        },
        "twitter_campaigns_config": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required": ["enabled"],
            "additionalProperties": false
        },
        "staking_activity_config": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "last_run": {
                    "type": ["integer", "null", "string"]
                }
            },
            "required": ["enabled", "last_run"],
            "additionalProperties": false
        },
        "staking_checkpoint_config": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "last_run": {
                    "type": ["integer", "null", "string"]
                }
            },
            "required": ["enabled", "last_run"],
            "additionalProperties": false
        },
        "executionAttempt": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "dateCreated": {
                    "type": "string"
                },
                "verified": {
                    "type": ["boolean", "null"]
                }
            },
            "required": ["id", "dateCreated", "verified"]
        },
        "proposer": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "signature": {
                    "type": "string"
                },
                "verified": {
                    "type": ["boolean", "null"]
                }
            },
            "required": ["address", "signature", "verified"],
            "additionalProperties": false
        },
        "voter": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "signature": {
                    "type": "string"
                },
                "votingPower": {
                    "type": ["number"]
                }
            },
            "required": ["address", "signature", "votingPower"],
            "additionalProperties": false
        },
        "scheduled_tweet_data": {
            "type": "object",
            "properties": {
                "text": {
                    "type": ["string", "array"]
                },
                "media_hashes": {
                    "type": ["string", "array"]
                },
                "posted": {
                    "type": "boolean"
                },
                "voters": {
                    "type": "array",
                    "items": {
                        "items": {
                            "$ref": "#/definitions/voter"
                        }
                    }
                },
                "proposer": {
                    "$ref": "#/definitions/proposer"
                },
                "request_id": {
                    "type": "string"
                },
                "createdDate": {
                    "type": "number"
                },
                "action_id": {
                    "type": "string"
                },
                "executionAttempts": {
                    "type": "array",
                    "items": {
                        "items": {
                            "$ref": "#/definitions/executionAttempt"
                        }
                    }
                }
            },
            "required": ["request_id", "createdDate", "text", "posted", "proposer", "voters",  "executionAttempts", "action_id"],
            "additionalProperties": false
        },
        "twitter_campaign_data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "hashtag": {
                    "type": "string"
                },
                "start_ts": {
                    "type": "integer"
                },
                "end_ts": {
                    "type": "integer"
                },
                "proposer": {
                    "$ref": "#/definitions/proposer"
                },
                "voters": {
                    "type": "array",
                    "items": {
                        "items": {
                            "$ref": "#/definitions/voter"
                        }
                    }
                },
                "status": {
                    "type": "string",
                    "enum" : ["proposed", "voting", "scheduled", "live", "ended", "void"]
                }
            },
            "required": ["request_id", "createdDate", "text", "posted", "proposer", "voters",  "executionAttempts", "action_id"],
            "additionalProperties": false
        },
        "centaur": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "purpose": {
                    "type": "string"
                },
                "memory": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/action"
                    }
                },
                "members": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/member"
                    }
                },
                "messages": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/message"
                    }
                },
                "configuration": {
                    "type": "object",
                    "properties": {
                        "plugins": {
                            "type": "object",
                            "properties": {
                                "daily_tweet": {
                                    "$ref": "#/definitions/daily_tweet_config"
                                },
                                "scheduled_tweet": {
                                    "$ref": "#/definitions/scheduled_tweet_config"
                                },
                                "daily_orbis": {
                                    "$ref": "#/definitions/daily_orbis_config"
                                },
                                "week_in_olas": {
                                    "$ref": "#/definitions/week_in_olas_config"
                                },
                                "twitter_campaigns": {
                                    "$ref": "#/definitions/twitter_campaigns_config"
                                },
                                "staking_activiy": {
                                    "$ref": "#/definitions/staking_activiy_config"
                                },
                                "staking_checkpoint": {
                                    "$ref": "#/definitions/staking_checkpoint_config"
                                }
                            },
                            "required": ["daily_tweet", "scheduled_tweet", "daily_orbis", "week_in_olas"],
                            "additionalProperties": false
                        },
                        "memberWhitelist": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": ["plugins", "memberWhitelist"],
                    "additionalProperties": false
                },
                "plugins_data": {
                    "type": "object",
                    "properties": {
                        "daily_orbis": {
                            "type": "object"
                        },
                        "daily_tweet": {
                            "type": "object"
                        },
                        "scheduled_tweet": {
                            "type": "object",
                            "properties": {
                                "tweets": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/scheduled_tweet_data"
                                    }
                                }
                            },
                            "required": ["tweets"],
                            "additionalProperties": false
                        },
                        "twitter_campaigns": {
                            "type": "object",
                            "properties": {
                                "campaigns": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/twitter_campaign_data"
                                    }
                                }
                            },
                            "required": ["campaigns"],
                            "additionalProperties": false
                        }
                    },
                    "required": ["daily_orbis", "daily_tweet", "scheduled_tweet"],
                    "additionalProperties": false
                }
            },
            "required": ["id", "name", "purpose", "memory", "actions", "members", "messages", "configuration", "plugins_data"],
            "additionalProperties": false
        }
    },
    "type": "array",
    "items": {
        "$ref": "#/definitions/centaur"
    }
}